# Production Environment Configuration for taivideonhanh
# Copy this file to .env.production and update with your actual values

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=taivideonhanh_prod
DB_USER=postgres
DB_PASSWORD=your-secure-postgres-password

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
JWT_ACCESS_SECRET=your-super-secure-access-token-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secure-refresh-token-key-change-this-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Security Configuration
ROTATE_REFRESH_TOKENS=true

# Admin Configuration
ADMIN_EMAILS=admin@taivideonhanh.vn
DEFAULT_ADMIN_EMAIL=admin@taivideonhanh.vn
DEFAULT_ADMIN_PASSWORD=your-secure-admin-password

# Server Configuration
PORT=5000
NODE_ENV=production

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://taivideonhanh.vn/api
HOSTNAME=0.0.0.0

# Cookie System Configuration
COOKIES_PATH=/app/data/cookies/platform-cookies.txt
ENABLE_COOKIE_AUTH=true
YOUTUBE_COOKIES_PATH=/app/data/cookies/youtube-cookies.txt
CHROME_USER_DATA_DIR=/opt/chrome-profile

# File Upload Configuration
UPLOAD_PATH=/app/data/uploads
MAX_FILE_SIZE=50MB

# Stripe Configuration (REQUIRED for payment functionality)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here

# Rate Limiting
ENABLE_RATE_LIMITING=true

# Logging Configuration
LOG_LEVEL=info

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Domain Configuration
DOMAIN=taivideonhanh.vn
CORS_ORIGIN=https://taivideonhanh.vn

# SSL Configuration
SSL_ENABLED=true
